// This file was automatically generated by gulp-svg-sprite

@mixin sprite {
    $path: '{{{ sprite }}}';
    $filename: str-slice($path, 1, str-index($path, '.svg'));

    display: inline-block;
    background-image: url('#{$path}');
    background-size: ({{ spriteWidth }} / {{ iconDimension }} * 1em) ({{ spriteHeight }} / {{ iconDimension }} * 1em);
    width: 1em;
    padding-bottom: 1em;

    .no-svg & {
        background-image: url('#{$filename}png');
    }
}

.Icon {
    @include sprite;
}

{{ #shapes }}
.Icon--{{ name }} {
    background-position: {{ position.relative.xy }};
}

{{ /shapes }}

$icon-map: (
    {{ #shapes }}
        {{ name }}: {{ position.relative.xy }},
    {{ /shapes }}
);

@mixin icon($name) {
    @if map-has-key($icon-map, $name) {
        background-position: map-get($icon-map, $name);
    }
}
